<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        tools:context=".Home">

    <!--  <TextView android:layout_width="wrap_content"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:textStyle="bold"-->
    <!--            android:text="We are happy to see you here"-->
    <!--            android:textSize="50dp"-->
    <!--            android:gravity="center_horizontal"-->
    <!--            android:layout_marginTop="300dp"-->
    <!--            />-->
    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scroll">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="Entet your first name"
                      android:layout_marginHorizontal="15dp"
                      android:id="@+id/fname"


                      android:background="@drawable/textview_round"
                      android:padding="15dp" android:maxLines="1"/>


            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="Entet your father name"
                      android:layout_marginTop="10dp"
                      android:layout_marginHorizontal="15dp"
                      android:id="@+id/fathername"


                      android:background="@drawable/textview_round"
                      android:padding="15dp"
                      android:maxLines="1"/>

            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="Entet your last name "
                      android:inputType="text"
                      android:layout_marginTop="10dp"
                      android:layout_marginHorizontal="15dp"
                      android:id="@+id/lname"

                      android:background="@drawable/textview_round"
                      android:padding="15dp" android:maxLines="1"/>

            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="Entet your school name"
                      android:layout_marginTop="10dp"
                      android:layout_marginHorizontal="15dp"
                      android:id="@+id/schoolname"

                      android:background="@drawable/textview_round"
                      android:padding="15dp" android:maxLines="2"/>

            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="Entet your collage name"
                      android:layout_marginTop="10dp"
                      android:layout_marginHorizontal="15dp"
                      android:id="@+id/cname"

                      android:background="@drawable/textview_round"
                      android:padding="15dp"
                      android:maxLines="2"/>


            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Upload your photo"
                      android:textStyle="bold"
                      android:layout_margin="20dp"
                      android:id="@+id/Pic"/>
            <ImageView android:layout_width="200dp"
                       android:layout_height="200dp"
                       android:layout_marginTop="20dp"
                       android:layout_gravity="center"
                       android:id="@+id/image1"
                       android:src="@drawable/upload"/>
<!--                       android:padding="50dp"/>-->



            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Upload your photo"
                      android:textStyle="bold"
                      android:layout_margin="20dp"/>
            <ImageView android:layout_width="200dp"
                       android:layout_height="200dp"
                       android:layout_marginTop="20dp"
                       android:layout_gravity="center"
                       android:id="@+id/picAdhar"
                       android:src="@drawable/upload"
                       android:padding="50dp"
            />


            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Upload your photo"
                      android:textStyle="bold"
                      android:layout_margin="20dp"/>
            <ImageView android:layout_width="200dp"
                       android:layout_height="200dp"
                       android:layout_marginTop="20dp"
                       android:layout_gravity="center"
                       android:id="@+id/picPan"
                       android:layout_marginBottom="25dp"
                       android:padding="50dp"
                       android:src="@drawable/upload"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="@drawable/button_round"
                      android:text="Submit"
                      android:layout_gravity="center"
                      android:textAlignment="center"
                      android:textStyle="bold"
                      android:padding="20dp"
                      android:layout_marginHorizontal="15dp"
                      android:layout_marginBottom="15dp"
                      android:id="@+id/onSubmit"/>



        </LinearLayout>
    </ScrollView>


</LinearLayout>